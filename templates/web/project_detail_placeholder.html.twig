                <svg class="bd-placeholder-img card-img-top mb-2" width="100%" height="280" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false">
                    <title>Placeholder</title>
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <text x="45%" y="50%" fill="#dee2e6">{{ 'Image Name' | trans }}</text>
                </svg>
                <svg class="bd-placeholder-img card-img-top mb-2" width="100%" height="280" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false">
                    <title>Placeholder</title>
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <text x="45%" y="50%" fill="#dee2e6">{{ 'Image Name' | trans }}</text>
                </svg>
            </div>
            <div class="col">
                <h4 class="text-secondary mb-3"><span class="placeholder col-{{ random(5, 12) }}"></span></h4>
                {% for i in 0..random(4, 7) %}
                    <p>
                        {% include 'helpers/random_paragraph_placeholder.html.twig' %}
                    </p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
