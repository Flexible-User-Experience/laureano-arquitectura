{% extends 'web/base.html.twig' %}

{% block title %}{{ 'Project' | trans }} Â· {{ parent() }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <nav class="navbar navbar-expand-lg bg-body-secondary" aria-label="Submenu navbar">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#submenu" aria-controls="submenu" aria-expanded="false" aria-label="{{ 'frontend.toggle' | trans }}">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse d-lg-flex" id="submenu">
                        <div class="d-lg-flex col-lg-2 justify-content-lg-start">
                            <a href="{{ path('app_web_projects_list') }}" class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-rotate-left fa-fw"></i> {{ 'Go back to projects' | trans }}</a>
                        </div>
                        <div class="d-lg-flex col-lg-5 justify-content-lg-start">

                        </div>
                        <div class="d-lg-flex col-lg-5 justify-content-lg-end">
                            <a class="btn btn-outline-secondary me-3"><i class="fa-solid fa-circle-left fa-fw"></i> {{ 'Go to previous project' | trans }}</a>
                            <a class="btn btn-outline-secondary">{{ 'Go to following project' | trans }} <i class="fa-solid fa-circle-right fa-fw"></i></a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <h1 class="pb-2 border-bottom mb-5"><span class="placeholder col-{{ random(8, 11) }}"></span></h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <svg class="bd-placeholder-img card-img-top mb-2" width="100%" height="280" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false">
                    <title>Placeholder</title>
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <text x="45%" y="50%" fill="#dee2e6">{{ 'Image Name' | trans }}</text>
