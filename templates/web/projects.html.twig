{% extends 'web/base.html.twig' %}

{% block title %}{{ 'projects' | trans | capitalize }} Â· {{ parent() }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <h1 class="pb-2 border-bottom">{{ 'projects' | trans | capitalize }}</h1>
            </div>
        </div>
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
            {% if projects | length > 0 %}
                {% for project in projects %}
                    <div class="col-sm-4">
                        <div class="card">
                            <img src="{{ vich_uploader_asset(project, 'imageFile') | imagine_filter('800xY') }}" class="card-img-top" alt="{{ project.name }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ project.name }}</h5>
                                <p class="card-text">
                                    {{ project.summary }}
                                </p>
                                <a href="{{ path('app_web_project_detail', {'slug': project.slug}) }}" class="btn btn-primary text-white">
                                    <i class="fa-solid fa-search fa-fw"></i> {{ 'read more' | trans | capitalize }}
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                {% for i in 0..6 %}
                    <div class="col-sm-4">
                        <div class="card">
                            <svg class="bd-placeholder-img card-img-top" width="100%" height="280" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Image cap" preserveAspectRatio="xMidYMid slice" focusable="false">
                                <title>Placeholder</title>
                                <rect width="100%" height="100%" fill="#868e96"></rect>
                                <text x="40%" y="50%" fill="#dee2e6">{{ 'Project' | trans }} {{ loop.index }}</text>
                            </svg>
                            <div class="card-body">
                                <h5 class="card-title"><span class="placeholder col-{{ random(8, 11) }} placeholder-lg"></span></h5>
                                <p class="card-text">
                                    {% include 'helpers/random_paragraph_placeholder.html.twig' %}
                                </p>
                                <a href="#" class="btn btn-primary text-white">
                                    <i class="fa-solid fa-search fa-fw"></i> {{ 'read more' | trans | capitalize }}
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}
