<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{{ project_title }}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('web') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('web') }}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="{{ 'frontend.navbar' | trans }}">
            <div class="container-xl">
                <a class="navbar-brand" href="{{ path('app_web_homepage') }}">
                    <img src="{{ asset('build/images/logo.png') | imagine_filter('100xY') }}" alt="{{ 'frontend.logo' | trans | capitalize }} {{ project_title }}">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="{{ 'frontend.toggle' | trans }}">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="main-menu">
                    {{ knp_menu_render('main') }}
                </div>
            </div>
        </nav>
        <div class="container">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="row my-4">
                        <div class="col">
                            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                {{ message | trans }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="{{ 'frontend.close_button' | trans }}"></button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        {% block body %}{% endblock %}
        <div class="container mt-5">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                <p class="col-md-4 mb-0 text-muted"><i class="fa-regular fa-copyright"></i> {{ 'now' | date('Y') }} {{ project_title }}</p>
{#                <p class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto text-secondary">#}
{#                    <i class="fa-2x fa-brands fa-html5 me-1"></i>#}
{#                    <i class="fa-2x fa-brands fa-css3-alt"></i>#}
{#                </p>#}

                {{ knp_menu_render('languages') }}
{#                <ul class="nav col-md-4 justify-content-center">#}
{#                    <li class="nav-item"><a href="{{ path('app_web_privacy_policy') }}" class="nav-link px-2 text-secondary">{{ 'privacy policy' | trans }}</a></li>#}
{#                </ul>#}


                <ul class="nav col-md-4 justify-content-end">
                    <li class="nav-item"><a href="{{ path('app_web_privacy_policy') }}" class="nav-link px-2 text-muted">{{ 'privacy policy' | trans }}</a></li>
                </ul>
            </footer>
        </div>
    </body>
</html>
