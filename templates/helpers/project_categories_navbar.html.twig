<div class="container-fluid">
    <div class="row">
        <nav class="navbar navbar-expand-lg bg-body-secondary" aria-label="Submenu navbar">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#submenu" aria-controls="submenu" aria-expanded="false" aria-label="{{ 'frontend.toggle' | trans }}">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-lg-flex" id="submenu">
                    <div class="d-lg-flex col-lg-12 justify-content-lg-center">
                        <ul class="nav nav-pills nav-fill">
                            {% for category in categories %}
                                <li class="nav-item">
                                    <a class="nav-link{% if selected_category is defined and selected_category.id == category.id %} active{% endif %}" href="{{ path('app_web_project_category_detail', {'slug': category.slug}) }}">{{ category.name | lower }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </div>
</div>
