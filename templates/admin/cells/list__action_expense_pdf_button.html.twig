{% if admin.isGranted('EDIT', object) and admin.hasRoute('edit') and object.documentFilename %}
    <a data-controller="pdf-button" data-action="pdf-button#clicked" data-toggle="modal" data-target="#pdf-preview-modal" data-pdf-button-attachment-value="{{ object.id }}" data-pdf-button-path-value="{{ path('download_media_inline_expense_document', {'id': object.id}) }}" class="btn btn-sm btn-default" title="{{ 'PDF' | trans }}">
        <i class="far fa-file-pdf"></i>
    </a>
{% endif %}
