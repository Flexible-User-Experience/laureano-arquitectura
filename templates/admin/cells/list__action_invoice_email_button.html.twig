{% if object.hasBeenSent %}
    <a class="btn btn-sm btn-default" href="{{ admin.generateObjectUrl('email', object) }}" title="{{ 'Has Been Sent' | trans }}">
        <i class="far fa-envelope-open"></i>
    </a>
{% else %}
    <a class="btn btn-sm btn-default" href="{{ admin.generateObjectUrl('email', object) }}" title="{{ 'Send' | trans }}">
        <i class="far fa-envelope"></i>
    </a>
{% endif %}
