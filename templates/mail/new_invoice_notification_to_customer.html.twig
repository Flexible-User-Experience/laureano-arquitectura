{% extends '@App/mail/layout.html.twig' %}

{% block content %}
    {% apply inky_to_html | inline_css(source('@styles/foundation-emails.css')) %}
        <container class="header">
            <row>
                <columns>
                    <spacer size="32"></spacer>
                    <h3 class="text-center">{{ 'Invoice' | trans }}</h3>
                </columns>
            </row>
        </container>
        <container class="body-border">
            <row>
                <columns>
                    <spacer size="32"></spacer>
                    <center>
                        <img src="{{ absolute_url(asset('build/images/full_logo.png')) }}" alt="{{ project_title }}">
                    </center>
                    <spacer size="32"></spacer>
                    <p>{{ 'New Invoice help text 1' | trans({'%number%': invoice.sluggedSerialNumber, '%date%': invoice.dateString}) | raw }}</p>
                    <spacer size="16"></spacer>
                    <p>{{ 'New Invoice help text 2' | trans({'%total%': invoice.total | money_localized_format}) | raw }}</p>
                    <spacer size="64"></spacer>
                    <p>{{ 'New Invoice help text 3' | trans | raw }}</p>
                </columns>
            </row>
        </container>
        <container class="header">
            <row>
                <columns>
                    <spacer size="32"></spacer>
                    <p class="muted">{{ 'New Invoice help text 4' | trans({'%phone%': enterprise_phone}) }}</p>
                    <menu>
                        <item class="flux" href="{{ absolute_url(path('app_web_homepage')) }}">&copy; {{ 'now' | date('Y') }} {{ project_title }}</item>
                    </menu>
                </columns>
            </row>
        </container>
    {% endapply %}
{% endblock %}
