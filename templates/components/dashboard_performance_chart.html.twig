<div class="col-xs-12">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <div class="info-box bg-light-blue">
                <span class="info-box-icon"><i class="far fa-eye"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">{{ 'Web visits' | trans }}</span>
                    <span class="info-box-number">{{ computed.totalWebVisitsAmount | i }}</span>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <a href="{% if computed.totalProjectsAmount == 0 %}{{ path('admin_app_project_create') }}{% else %}{{ path('admin_app_project_list') }}{% endif %}">
                <div class="info-box bg-light-blue">
                    <span class="info-box-icon"><i class="far fa-folder-open"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">{{ 'projects' | trans }}</span>
                        <span class="info-box-number">{{ computed.totalProjectsAmount | i }}</span>
                        {% if computed.totalProjectsAmount == 0 %}
                            <div class="progress"></div>
                            <span class="progress-description"><i class="fa fa-plus-circle fa-fw"></i> {{ 'Add new' | trans }}</span>
                        {% endif %}
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <a href="{{ path('admin_app_contactmessage_list') }}">
                <div class="info-box bg-aqua">
                    <span class="info-box-icon"><i class="far fa-envelope-open"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">{{ 'Contact Message List' | trans }} {{ 'received' | trans }}</span>
                        <span class="info-box-number">{{ computed.totalContactMessagesAmount | i }}</span>
                        {% if computed.responsePendingContactMessagesAmount > 0 %}
                            <div class="progress"></div>
                            <span class="progress-description">{{ computed.responsePendingContactMessagesAmount | i }} {{ 'response pending' | trans }}</span>
                        {% endif %}
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <a href="{% if computed.totalProvidersAmount == 0 %}{{ path('admin_app_provider_create') }}{% else %}{{ path('admin_app_provider_list') }}{% endif %}">
                <div class="info-box bg-teal">
                    <span class="info-box-icon"><i class="far fa-user"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">{{ 'Provider List' | trans }}</span>
                        <span class="info-box-number">{{ computed.totalProvidersAmount | i }}</span>
                        {% if computed.totalProvidersAmount == 0 %}
                            <div class="progress"></div>
                            <span class="progress-description"><i class="fa fa-plus-circle fa-fw"></i> {{ 'Add new' | trans }}</span>
                        {% endif %}
                    </div>
                </div>
            </a>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <a href="{% if computed.totalCustomersAmount == 0 %}{{ path('admin_app_customer_create') }}{% else %}{{ path('admin_app_customer_list') }}{% endif %}">
                <div class="info-box bg-teal">
                    <span class="info-box-icon"><i class="far fa-user"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">{{ 'Customer List' | trans }}</span>
                        <span class="info-box-number">{{ computed.totalCustomersAmount | i }}</span>
                        {% if computed.totalCustomersAmount == 0 %}
                            <div class="progress"></div>
                            <span class="progress-description"><i class="fa fa-plus-circle fa-fw"></i> {{ 'Add new' | trans }}</span>
                        {% endif %}
                    </div>
                </div>
            </a>
        </div>
        {% if computed.totalCustomersAmount > 0 %}
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                <a href="{% if computed.totalInvoicesAmount == 0 %}{{ path('admin_app_invoice_create') }}{% else %}{{ path('admin_app_invoice_list') }}{% endif %}">
                    <div class="info-box bg-yellow">
                        <span class="info-box-icon"><i class="fa fa-file-text-o"></i></span>
                        <div class="info-box-content">
                            <span class="info-box-text">{{ 'Invoice List' | trans }}</span>
                            <span class="info-box-number">{{ computed.totalInvoicesAmount | i }}</span>
                            {% if computed.totalInvoicesAmount == 0 %}
                                <div class="progress"></div>
                                <span class="progress-description"><i class="fa fa-plus-circle fa-fw"></i> {{ 'Add new' | trans }}</span>
                            {% endif %}
                        </div>
                    </div>
                </a>
            </div>
        {% endif %}
    </div>
</div>
